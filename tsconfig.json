{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "strict": true,
    "newLine": "lf",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@root/*": [ "./*"]
    },
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "include": [".eslintrc.js", "**/*.js", "**/*.ts", "**/*.mts", "**/*.vue", "src/**/*", "src/.vitepress/**/*"],
  "exclude": ["node_modules"]
}

